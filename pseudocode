svg of width and height

button centralise
button decentralise



availablePower = 1000

power(
    min = 0 max = 100
    for each node, 
        distribute availablePower in percentage
    decrease availablePower by that much
)

radius(
    min = 1 max = 50 
    power
)

linkLength(
    min = 0 max = diagonal of svg
    power 
)

linkNum(power)

setNodes(
    for n < 100,
        create node with 
)

setLinks(
    for each source node, 
        while linkedNum = linkNum, 
            do nothing


        while linkedNum < linkNum, 
            pick a random target. if linkedNum < linkNum, and distance to target < linkLength source or target 
                create link between source and target in links array
                increase linkedNum of source and target

        while linkedNum > LinkNum,
            pick one of its targets, if linkedNum > linkNum, if power of target < power of self
                delete link between them from links array
                decrease linkedNum of source and target
)



nodes({power, x, y, radius, vx, vy, linkedNum, linkNum})

links({source, target})



simulate(set force parameters and visualise() on tick)

visualise(append, update, remove links and then nodes)

initiate(set random power distribution, set nodes, set links, simulate)



centralise(concentrate power, update nodes, update links, simulate again)

decentralise(dilute power, update nodes, update links, simulate again)